if(WIN32)
	set(GSE_PLATFORM "win")
elseif(APPLE)
	set(GSE_PLATFORM "osx")
elseif(ANDROID)
	set(GSE_PLATFORM "linux-bionic")
elseif(UNIX)
	set(GSE_PLATFORM "linux")
else()
	message(FATAL_ERROR "Unknown/Unsupported Platform")
endif()

if(CMAKE_SYSTEM_PROCESSOR MATCHES "x86_64|amd64|AMD64")
	set(GSE_ARCH "x64")
elseif(CMAKE_SYSTEM_PROCESSOR MATCHES "aarch64|arm64|ARM64")
	set(GSE_ARCH "arm64")
elseif(CMAKE_SYSTEM_PROCESSOR MATCHES "X86")
	set(GSE_ARCH "x86")
else()
	message(FATAL_ERROR "Unknown/Unsupported Arch")
endif()

set(GSE_RID "${GSE_PLATFORM}-${GSE_ARCH}")
